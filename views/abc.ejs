<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  	<% include templates/header.ejs </template>%>
    <h1><%= title %></h1>

    <p>Welcome to <%= title %></p>
	
  <table>
    <tr>
    <th>ID</th>
    <th>Name</th> 
    <th>Cost Price </th>

    <th>Selling Price </th>
    <th>Stock </th>
    </tr>
    <% for(var i=0; i < rows.length; i++) { %>
    <form action="/post">
    <input type="radio" name="val" value=<%= rows[i].inv_id% >>
       <tr>
       <td><%= rows[i].inv_id %></td>
       <td><%= rows[i].inv_name %></td>
       <td><%= rows[i].cp%></td>
       <td><%= rows[i].sp%></td>
       <td><%= rows[i].stock%></td>
      </tr>
      </form>
    <% } %>
</table>
	
  </body>
</html>
